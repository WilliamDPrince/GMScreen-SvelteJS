# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# For JSON files specifically (if you want to ensure array/object formatting)
[*.json]
indent_style = space
indent_size = 4

# For JavaScript/TypeScript files (if you want specific settings)
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 4
